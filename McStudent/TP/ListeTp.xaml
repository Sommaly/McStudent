<Page x:Class="McStudent.ListeTp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:McStudent"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListeTp">

    <Grid>
        <DataGrid Name="liste_tp" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="1*" Header="Nom du TP" Binding="{Binding titre}" />
                <DataGridTextColumn Width="1*" Header="Description" Binding="{Binding description}" />
                <DataGridTextColumn Width="1*" Header="Classe" Binding="{Binding nom_promo}" />
                <DataGridTextColumn Width="1*" Header="Groupe" Binding="{Binding nom_groupe}" />
                <DataGridTextColumn Width="1*" Header="Date de début" Binding="{Binding dte_debut}" />
                <DataGridTextColumn Width="1*" Header="Date de fin" Binding="{Binding dte_fin}" />
                <DataGridTextColumn Width="1*" Header="Note" Binding="{Binding note}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
