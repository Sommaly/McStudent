<Page x:Class="McStudent.ListeTp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:McStudent"
      mc:Ignorable="d" 
      d:DesignHeight="715" d:DesignWidth="1290"
      Title="ListeTp">

    <Grid>
        <DataGrid x:Name="liste_tp" AutoGenerateColumns="False" ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id_tp}"/>
                <DataGridTextColumn Header="Titre" Binding="{Binding titre}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding description}"/>
                <DataGridTextColumn Header="Date de début" Binding="{Binding dte_debut}"/>
                <DataGridTextColumn Header="Date de fin" Binding="{Binding dte_fin}"/>
                <DataGridTextColumn Header="Barème" Binding="{Binding note}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
